{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types", "@types"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
